<Window x:Class="Clicker_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clicker_Game" 
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainViewModel}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel >
            <Button IsEnabled="{Binding StartEnabled}" Height="40" Width="90" Command="{Binding StartCommand}"> Start </Button>
            <Button IsEnabled="{Binding Enabled}" Height="40" Width="90" Command="{Binding ClickMeCommand}"> Cleack me  </Button>
            <TextBlock Height="20" Width="90" > Differce</TextBlock>
            <TextBlock Height="40" Width="90" Text="{Binding Dif}"></TextBlock>
            <Label  Background="{Binding Color}" ></Label>
            <TextBlock Text="Avarage"> </TextBlock>
            <TextBlock Text="{Binding Avg}"> </TextBlock>
        </StackPanel>
    </Grid>
</Window>
